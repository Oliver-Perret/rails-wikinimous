


<div class="container" >
  <h1> My Articles </h1>
  <% @articles.each  do |article| %>
    <div >
      <p><%= link_to article.title, article_path(article)  %></p>

      <p><%= link_to "update a article", edit_article_path(article.id) %></p>
    </div>


  <p><%= link_to "Add a new article", new_article_path %></p>

  <%= link_to "Delete", article_path(article),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
   <% end %>

</div>

